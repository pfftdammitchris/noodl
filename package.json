{
	"name": "noodl-cli",
	"version": "0.0.8",
	"license": "MIT",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"app": "node dist/cli.js",
		"prebuild": "rm -rf dist",
		"build": "tsc",
		"prestart": "rm -rf dist",
		"start": "cross-env DEV=true CI=false tsc --watch",
		"dev": "cross-env DEV=true CI=false ts-node-dev --respawn --transpile-only dev/dev.ts",
		"dev:file": "cross-env DEV=true CI=false ts-node-dev --respawn --transpile-only",
		"test": "cross-env TS_NODE_PROJECT=\"tsconfig.test.json\" NODE_ENV=test ts-mocha -r ts-node/register --extensions ts --watch --watch-files src src/**/*.test.ts",
		"test:file": "cross-env TS_NODE_PROJECT=\"tsconfig.test.json\" NODE_ENV=test ts-mocha -r ts-node/register --extensions ts --watch --watch-files \"dev/**/*.ts\""
	},
	"bin": {
		"noodl": "dist/cli.js"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"chai-noodl-dom": "file:packages/chai-noodl-dom",
		"noodl-building-blocks": "file:packages/noodl-building-blocks"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/chai": "^4.2.14",
		"@types/fs-extra": "^9.0.6",
		"@types/ink-big-text": "^1.2.0",
		"@types/ink-divider": "^2.0.1",
		"@types/lodash": "^4.14.166",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.16",
		"@types/react": "^17.0.0",
		"axios": "^0.21.1",
		"chai": "^4.2.0",
		"cross-env": "^7.0.3",
		"dotenv": "^8.2.0",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"fast-xml-parser": "^3.17.6",
		"fs-extra": "^9.0.1",
		"globby": "^11.0.1",
		"immer": "^8.0.0",
		"ink-testing-library": "^2.1.0",
		"lerna": "^3.22.1",
		"mocha": "^8.2.1",
		"noodl-types": "file:packages/noodl-types",
		"ts-mocha": "^8.0.0",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.1",
		"typescript": "^4.1.3",
		"typescript-validators": "^1.0.2",
		"xml-js": "^1.6.11",
		"yaml": "^1.10.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pfftdammitchris/noodl-cli"
	},
	"prettier": {
		"arrowParens": "always",
		"endOfLine": "lf",
		"printWidth": 80,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all"
	},
	"nodemonConfig": {
		"watch": [
			"dist/output/dev.js"
		],
		"ignore": [
			"babel",
			"src"
		],
		"verbose": true
	}
}
