{
	"name": "noodl-cli",
	"version": "0.0.1",
	"license": "MIT",
	"bin": "dist/cli.js",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"app": "node dist/cli.js",
		"build": "babel src --extensions \".ts,.tsx\" --out-dir dist",
		"prestart": "rm -rf dist",
		"start": "cross-env DEV=true CI=false tsc --watch",
		"dev": "cross-env DEV=true CI=false ts-node-dev --respawn --transpile-only dev/dev.ts"
	},
	"files": [
		"dist/cli.js"
	],
	"dependencies": {
		"axios": "^0.21.0",
		"immer": "^8.0.0",
		"ink": "^3.0.8",
		"ink-big-text": "^1.2.0",
		"ink-confirm-input": "^2.0.0",
		"ink-divider": "^3.0.0",
		"ink-multi-select": "^2.0.0",
		"ink-progress-bar": "^3.0.0",
		"ink-select-input": "^4.2.0",
		"ink-spinner": "^4.0.1",
		"ink-table": "^3.0.0",
		"ink-text-input": "^4.0.1",
		"lodash": "^4.17.20",
		"meow": "^8.0.0",
		"mkdirp": "^1.0.4",
		"react": "^17.0.1",
		"yaml": "^1.10.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/fs-extra": "^9.0.5",
		"@types/ink-big-text": "^1.2.0",
		"@types/ink-divider": "^2.0.1",
		"@types/lodash": "^4.14.165",
		"@types/mkdirp": "^1.0.1",
		"@types/node": "^14.14.11",
		"@types/react": "^17.0.0",
		"chalk": "^4.1.0",
		"cross-env": "^7.0.3",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"fs-extra": "^9.0.1",
		"ink-testing-library": "^2.1.0",
		"mocha": "^8.2.1",
		"nodemon": "^2.0.6",
		"noodl-types": "^1.0.3",
		"ts-node-dev": "^1.1.1",
		"typescript": "^4.1.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pfftdammitchris/noodl-cli"
	},
	"prettier": {
		"arrowParens": "always",
		"endOfLine": "lf",
		"printWidth": 80,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all"
	},
	"nodemonConfig": {
		"watch": [
			"dist/output/dev.js"
		],
		"ignore": [
			"babel",
			"src"
		],
		"verbose": true
	}
}
