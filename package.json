{
	"name": "noodl-cli",
	"version": "0.0.20",
	"license": "MIT",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"app": "node dist/cli.js",
		"prebuild": "rm -rf dist",
		"build": "tsc",
		"codegen": "graphql-codegen",
		"codegen:watch": "graphql-codegen --watch",
		"lib:build": "lerna exec --scope noodl-types \"npm run build\"",
		"prestart": "rm -rf dist",
		"start": "cross-env DEV=true CI=false tsc --watch",
		"server": "npm run codegen && ts-node-dev --respawn --transpile-only src/server/index.ts",
		"dev": "cross-env DEV=true CI=false ts-node-dev --respawn --transpile-only dev/dev.ts",
		"dev:file": "ts-node-dev --respawn --transpile-only",
		"test": "cross-env NODE_ENV=test ts-node-dev --respawn --transpile-only dev/runTests.ts",
		"test:file": "cross-env TS_NODE_PROJECT=\"tsconfig.test.json\" NODE_ENV=test ts-mocha -r ts-node/register --extensions ts --watch --watch-files \"dev/**/*.ts\""
	},
	"bin": {
		"noodl": "dist/cli.js"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"apollo-server-express": "^2.19.2",
		"apollo-server-plugin-base": "^0.10.4",
		"axios": "^0.21.1",
		"chalk": "^4.1.0",
		"dotenv": "^8.2.0",
		"download": "^8.0.0",
		"express": "^4.17.1",
		"fs-extra": "^9.1.0",
		"globby": "^11.0.2",
		"graphql": "^15.4.0",
		"immer": "^8.0.1",
		"ink": "^3.0.8",
		"ink-progress-bar": "^3.0.0",
		"ink-select-input": "^4.2.0",
		"ink-spinner": "^4.0.1",
		"ink-testing-library": "^2.1.0",
		"ink-text-input": "^4.0.1",
		"meow": "^9.0.0",
		"mocha": "^8.2.1",
		"netlify-lambda": "^2.0.1",
		"noodl-types": "file:packages/noodl-types",
		"noodl-utils": "0.0.41",
		"react": "^17.0.1",
		"yaml": "^1.10.0"
	},
	"devDependencies": {
		"@aitmed/ecos-lvl2-sdk": "^1.4.120",
		"@graphql-codegen/add": "^2.0.2",
		"@graphql-codegen/cli": "^1.19.3",
		"@graphql-codegen/core": "^1.17.9",
		"@graphql-codegen/introspection": "^1.18.1",
		"@graphql-codegen/schema-ast": "^1.18.1",
		"@graphql-codegen/typescript": "^1.18.1",
		"@graphql-codegen/typescript-operations": "^1.17.13",
		"@graphql-tools/load-files": "^6.2.5",
		"@graphql-tools/merge": "^6.2.7",
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/chai": "^4.2.14",
		"@types/download": "^6.2.4",
		"@types/fs-extra": "^9.0.6",
		"@types/graphql": "^14.5.0",
		"@types/ink-big-text": "^1.2.0",
		"@types/lodash": "^4.14.168",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.22",
		"@types/react": "^17.0.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"chai": "^4.2.0",
		"chai-noodl": "file:packages/chai-noodl",
		"cross-env": "^7.0.3",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"fast-xml-parser": "^3.17.6",
		"lerna": "^3.22.1",
		"noodl-building-blocks": "file:packages/noodl-building-blocks",
		"ts-mocha": "^8.0.0",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.1",
		"typescript": "^4.1.3",
		"typescript-validators": "^1.0.2",
		"webpack-node-externals": "^2.5.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pfftdammitchris/noodl-cli"
	},
	"prettier": {
		"arrowParens": "always",
		"endOfLine": "lf",
		"printWidth": 80,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "./tsconfig.json",
			"sourceType": "module"
		},
		"extends": [
			"airbnb",
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"plugins": [
			"@typescript-eslint",
			"prettier"
		],
		"env": {
			"browser": true,
			"es6": true
		},
		"settings": {
			"import/resolver": {
				"node": {
					"moduleDirectory": [
						"node_modules"
					]
				}
			}
		},
		"rules": {
			"no-template-curly-in-string": "off",
			"eqeqeq": 0
		}
	},
	"nodemonConfig": {
		"watch": [
			"dist/output/dev.js"
		],
		"ignore": [
			"babel",
			"src"
		],
		"verbose": true
	}
}
