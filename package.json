{
	"name": "noodl-cli",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"app": "npx nodemon dist/cli.js",
		"prestart": "rm -rf dist",
		"pretest": "npm run build",
		"start": "cross-env DEV=true CI=false tsc --watch",
		"test": "xo && ava",
		"tsc": "tsc --watch"
	},
	"files": [
		"dist/cli.js"
	],
	"dependencies": {
		"ink": "^3.0.8",
		"ink-big-text": "^1.2.0",
		"ink-confirm-input": "^2.0.0",
		"ink-divider": "^3.0.0",
		"ink-progress-bar": "^3.0.0",
		"ink-select-input": "^4.2.0",
		"ink-spinner": "^4.0.1",
		"ink-table": "^2.0.1",
		"ink-text-input": "^4.0.1",
		"meow": "^7.1.1",
		"react": "^17.0.1"
	},
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/react": "^16.9.53",
		"ava": "^3.13.0",
		"chalk": "^4.1.0",
		"cross-env": "^7.0.2",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"ink-testing-library": "^2.1.0",
		"typescript": "^4.0.3",
		"xo": "^0.34.1"
	},
	"ava": {
		"typescript": {
			"extensions": [
				"tsx"
			],
			"rewritePaths": {
				"src/": "dist/"
			}
		}
	},
	"xo": {
		"extends": "xo-react",
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": {
		"arrowParens": "always",
		"endOfLine": "lf",
		"printWidth": 80,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all"
	}
}
