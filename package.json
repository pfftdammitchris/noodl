{
	"name": "noodl-cli",
	"version": "0.0.32",
	"scripts": {
		"app": "node dist/cli.js",
		"prebuild": "rm -rf dist && npm run codegen",
		"build": "tsc",
		"build:noodl": "lerna exec --scope noodl \"npm run build\"",
		"build:noodltypes": "lerna exec --scope noodl-types \"npm run build\"",
		"bootstrap": "lerna bootstrap --hoist",
		"codegen": "graphql-codegen",
		"codegen:watch": "graphql-codegen --watch",
		"lib:build": "lerna exec --scope noodl-types --scope noodl-action-chain --scope noodl \"npm run build\"",
		"prestart": "rm -rf dist && npm run codegen",
		"scripts:dev": "ts-node-dev --respawn --transpile-only --cls dev/aggregator/index.ts",
		"start": "cross-env DEV=true CI=false tsc --watch",
		"start:noodl": "lerna exec --scope noodl \"npm run start\"",
		"server": "npm run codegen && ts-node-dev --respawn --transpile-only src/server/index.ts",
		"ebuild": "./node_modules/.bin/esbuild --bundle --platform=node --format=cjs --target=node10.4",
		"dev:file": "cross-env DEV=true CI=false ts-node-dev --respawn --transpile-only",
		"pretest": "npm run build",
		"postinstall": "npm run bootstrap",
		"test": "ava --watch",
		"test:noodl": "lerna exec --scope noodl \"npm run test\"",
		"test:noodl:file": "lerna exec --scope noodl \"npm run test:file\"",
		"test:nac": "lerna exec --scope noodl-action-chain \"npm run test\"",
		"test:file": "cross-env TS_NODE_PROJECT=\"tsconfig.test.json\" NODE_ENV=test ts-mocha -r ts-node/register --extensions ts --watch --watch-files \"src/**/*.ts\"",
		"pub": "node scripts/publish.js -p"
	},
	"dependencies": {
		"apollo-server-express": "^2.21.0",
		"cheerio": "^1.0.0-rc.6",
		"download": "^8.0.0",
		"express": "^4.17.1",
		"graphql": "^15.5.0",
		"immer": "^9.0.1",
		"ink": "^3.0.8",
		"ink-select-input": "^4.2.0",
		"ink-spinner": "^4.0.1",
		"ink-text-input": "^4.0.1",
		"invariant": "^2.2.4",
		"noodl": "file:packages/noodl",
		"noodl-types": "file:packages/noodl-types",
		"react": "^16.14.0",
		"transducers-js": "^0.4.174",
		"ws": "^7.4.5"
	},
	"devDependencies": {
		"@aitmed/ecos-lvl2-sdk": "^1.4.123",
		"@babel/plugin-proposal-private-methods": "^7.12.13",
		"@babel/plugin-transform-runtime": "^7.14.2",
		"@babel/polyfill": "^7.12.1",
		"@babel/preset-env": "^7.14.2",
		"@babel/preset-typescript": "^7.12.17",
		"@babel/register": "^7.12.13",
		"@graphql-codegen/cli": "^1.20.1",
		"@graphql-codegen/introspection": "^1.18.1",
		"@graphql-codegen/schema-ast": "^1.18.1",
		"@graphql-codegen/typescript": "^1.18.1",
		"@graphql-codegen/typescript-operations": "^1.17.13",
		"@graphql-tools/load-files": "^6.3.2",
		"@jsmanifest/typefest": "^1.0.1",
		"@jsmanifest/utils": "^1.0.7",
		"@rollup/plugin-babel": "^5.3.0",
		"@rollup/plugin-commonjs": "^18.0.0",
		"@rollup/plugin-node-resolve": "^11.2.0",
		"@rollup/plugin-typescript": "^8.2.0",
		"@types/chai": "^4.2.14",
		"@types/chai-as-promised": "^7.1.3",
		"@types/download": "^6.2.4",
		"@types/fs-extra": "^9.0.6",
		"@types/invariant": "^2.2.34",
		"@types/lodash": "^4.14.168",
		"@types/lodash.get": "^4.4.6",
		"@types/lodash.has": "^4.5.6",
		"@types/mocha": "^8.2.0",
		"@types/node": "^14.14.22",
		"@types/react": "^17.0.0",
		"@types/sinon": "^9.0.10",
		"@types/sinon-chai": "^3.2.5",
		"@types/transducers-js": "^0.4.4",
		"@types/yaml": "^1.9.7",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"apollo-server-plugin-base": "^0.11.0",
		"ava": "^3.15.0",
		"babel-plugin-lodash": "^3.3.4",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"chai-noodl": "file:packages/chai-noodl",
		"commander": "^7.2.0",
		"copy-webpack-plugin": "^5.1.2",
		"cross-env": "^7.0.3",
		"esbuild": "^0.11.20",
		"eslint-config-xo-react": "^0.25.0",
		"eslint-plugin-ava": "^12.0.0",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"fast-xml-parser": "^3.17.6",
		"fs-extra": "^10.0.0",
		"globby": "^11.0.2",
		"ink-testing-library": "^2.1.0",
		"lerna": "^4.0.0",
		"lodash": "^4.17.21",
		"meow": "^9.0.0",
		"mocha": "^8.2.1",
		"rollup": "^2.39.0",
		"rollup-plugin-filesize": "^9.1.0",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-progress": "^1.1.2",
		"sinon": "^10.0.1",
		"sinon-chai": "^3.5.0",
		"ts-mocha": "^8.0.0",
		"ts-morph": "^10.0.2",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.1",
		"type-fest": "^1.0.1",
		"typescript": "^4.2.4",
		"xo": "^0.40.1",
		"yaml": "^2.0.0-4"
	},
	"main": "dist/cli.js",
	"bin": {
		"noodl": "dist/cli.js"
	},
	"files": [
		"dist/cli.js"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/pfftdammitchris/noodl-cli"
	},
	"engines": {
		"node": ">=12"
	},
	"license": "MIT",
	"prettier": {
		"arrowParens": "always",
		"endOfLine": "lf",
		"printWidth": 80,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "./tsconfig.json",
			"sourceType": "module"
		},
		"extends": [
			"airbnb",
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"plugins": [
			"@typescript-eslint",
			"prettier"
		],
		"env": {
			"browser": true,
			"es6": true,
			"webextensions": true
		},
		"settings": {
			"import/resolver": {
				"node": {
					"moduleDirectory": [
						"node_modules"
					]
				}
			}
		},
		"rules": {
			"no-template-curly-in-string": "off",
			"eqeqeq": 0
		}
	},
	"ava": {
		"files": [
			"src/**/*.test.tsx",
			"!packages/**/*",
			"!node_modules"
		],
		"typescript": {
			"extensions": [
				"tsx"
			],
			"rewritePaths": {
				"src/": "dist/"
			}
		},
		"require": [
			"ts-node/register/transpile-only"
		]
	},
	"xo": {
		"extends": "xo-react",
		"rules": {
			"react/prop-types": "off"
		}
	},
	"nodemonConfig": {
		"ignore": [
			"dist",
			".yml"
		]
	}
}
