{
	"name": "noodl-cli",
	"version": "0.0.70",
	"main": "dist/cli.js",
	"module": "dist/cli.js",
	"typings": "dist/cli.d.ts",
	"bin": {
		"noodl": "cli.js"
	},
	"files": [
		"cli.js"
	],
	"scripts": {
		"clean": "rm -rf dist node_modules package-lock.json && lerna clean",
		"postinstall": "lerna exec --scope noodl-types --scope noodl-common \"npm run build\" && npm run bootstrap",
		"prebuild": "rm -rf dist",
		"build": "tsc",
		"bootstrap": "lerna bootstrap --hoist",
		"start": "cross-env DEV=true CI=false tsc --watch",
		"gen:dev": "npx ts-node-dev --respawn --transpile-only --watch packages/generator/dist/index.d.ts dev/generator.ts",
		"test": "ava --watch",
		"test:file": "cross-env TS_NODE_PROJECT=\"tsconfig.test.json\" NODE_ENV=test ts-mocha -r ts-node/register --extensions ts --watch --watch-files \"src/**/*.ts\"",
		"pub": "node scripts/publish.js -p"
	},
	"dependencies": {
		"@jsmanifest/utils": "^1.0.7",
		"axios": "^0.21.1",
		"chokidar": "^3.5.1",
		"configstore": "^5.0.1",
		"dotenv": "^10.0.0",
		"download": "^8.0.0",
		"execa": "^5.1.1",
		"express": "^4.17.1",
		"fast-xml-parser": "^3.19.0",
		"fs-extra": "^10.0.0",
		"globby": "^11.0.2",
		"immer": "^9.0.1",
		"ink": "^3.0.8",
		"ink-big-text": "^1.2.0",
		"ink-gradient": "^2.0.0",
		"ink-multi-select": "^2.0.0",
		"ink-progress-bar": "^3.0.0",
		"ink-select-input": "^4.2.0",
		"ink-spinner": "^4.0.1",
		"ink-text-input": "^4.0.1",
		"invariant": "^2.2.4",
		"lodash": "^4.17.21",
		"meow": "^9.0.0",
		"mime": "^1.6.0",
		"noodl": "file:packages/noodl",
		"noodl-aggregator": "file:packages/noodl-aggregator",
		"noodl-common": "file:packages/noodl-common",
		"noodl-types": "file:packages/noodl-types",
		"noodl-utils": "file:packages/noodl-utils",
		"pretty-error": "^3.0.4",
		"react": "^17.0.2",
		"transducers-js": "^0.4.174",
		"trie-search": "^1.3.5",
		"ws": "^7.4.5",
		"yaml": "^2.0.0-4"
	},
	"devDependencies": {
		"@aitmed/protorepo": "^1.0.24",
		"@ava/typescript": "^1.1.1",
		"@babel/core": "^7.14.6",
		"@babel/plugin-transform-runtime": "^7.14.2",
		"@babel/preset-env": "^7.14.7",
		"@babel/preset-typescript": "^7.14.5",
		"@jsmanifest/typefest": "^1.0.1",
		"@rollup/plugin-babel": "^5.3.0",
		"@rollup/plugin-commonjs": "^19.0.0",
		"@rollup/plugin-node-resolve": "^13.0.0",
		"@rollup/plugin-typescript": "^8.2.1",
		"@types/chai": "^4.2.19",
		"@types/chai-as-promised": "^7.1.3",
		"@types/configstore": "^5.0.0",
		"@types/download": "^8.0.0",
		"@types/express": "^4.17.12",
		"@types/fs-extra": "^9.0.6",
		"@types/ink-big-text": "^1.2.0",
		"@types/ink-gradient": "^2.0.1",
		"@types/invariant": "^2.2.34",
		"@types/lodash": "^4.14.168",
		"@types/mocha": "^8.2.0",
		"@types/node": "^15.12.5",
		"@types/prettier": "^2.2.3",
		"@types/react": "^17.0.0",
		"@types/rollup-plugin-peer-deps-external": "^2.2.0",
		"@types/rollup-plugin-progress": "^1.1.0",
		"@types/sinon": "^10.0.2",
		"@types/sinon-chai": "^3.2.5",
		"@types/transducers-js": "^0.4.4",
		"@types/ws": "^7.4.4",
		"@types/yaml": "^1.9.7",
		"@typescript-eslint/eslint-plugin": "^4.28.0",
		"@typescript-eslint/parser": "^4.28.0",
		"ava": "^3.15.0",
		"babel-plugin-lodash": "^3.3.4",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"chalk": "^4.1.1",
		"copy-webpack-plugin": "^5.1.2",
		"cross-env": "^7.0.3",
		"esbuild": "^0.12.10",
		"eslint-plugin-ava": "^12.0.0",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"generator": "file:packages/generator",
		"ink-testing-library": "^2.1.0",
		"lerna": "^4.0.0",
		"mocha": "^8.4.0",
		"nock": "^13.1.0",
		"prettier": "^2.3.2",
		"rollup": "^2.52.3",
		"rollup-plugin-filesize": "^9.1.0",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-progress": "^1.1.2",
		"sinon": "^10.0.1",
		"sinon-chai": "^3.5.0",
		"ts-mocha": "^8.0.0",
		"ts-morph": "^11.0.0",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.1",
		"type-fest": "^1.0.1",
		"typescript": "^4.3.4"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pfftdammitchris/noodl-cli"
	},
	"engines": {
		"node": ">=14"
	},
	"license": "MIT",
	"prettier": {
		"arrowParens": "always",
		"endOfLine": "lf",
		"printWidth": 80,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "./tsconfig.json",
			"sourceType": "module"
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"plugins": [
			"@typescript-eslint",
			"prettier"
		],
		"env": {
			"browser": true,
			"es6": true,
			"webextensions": true
		},
		"settings": {
			"import/resolver": {
				"node": {
					"moduleDirectory": [
						"node_modules"
					]
				}
			}
		},
		"rules": {
			"no-template-curly-in-string": "off",
			"eqeqeq": 0
		}
	},
	"ava": {
		"files": [
			"src/**/*.test.tsx"
		],
		"typescript": {
			"extensions": [
				"tsx"
			],
			"rewritePaths": {
				"src/": "dist/"
			}
		},
		"require": [
			"ts-node/register/transpile-only"
		]
	},
	"nodemonConfig": {
		"ignore": [
			".yml"
		]
	}
}
