{
	"name": "noodl-cli",
	"version": "0.0.75",
	"main": "dist/cli.js",
	"module": "dist/cli.js",
	"typings": "dist/cli.d.ts",
	"bin": {
		"noodl": "cli.js"
	},
	"files": [
		"dist/cli.js"
	],
	"scripts": {
		"clean": "rm -rf dist node_modules package-lock.json && lerna clean",
		"prebuild": "rm -rf dist",
		"build": "tsc --allowJs --outDir dist --declaration --allowSyntheticDefaultImports --lib esnext --module commonjs --pretty --target es2020 --sourceMap --skipLibCheck --esModuleInterop --keyOfStringsOnly --noEmitOnError false",
		"bootstrap": "lerna bootstrap --hoist",
		"start": "cross-env DEV=true CI=false npm run build -- --watch",
		"gen:dev": "npx ts-node-dev --respawn --transpile-only --watch packages/generator/dist/index.d.ts dev/generator.ts",
		"refs": "npx nodemon dev/refs/refs --ignore refs-output.json",
		"test": "ava --watch",
		"test:file": "cross-env TS_NODE_PROJECT=\"tsconfig.test.json\" NODE_ENV=test ts-mocha --extensions ts --watch --watch-files \"src/**/*.ts\"",
		"pub": "node scripts/publish.js -p"
	},
	"dependencies": {
		"@jsmanifest/utils": "^1.0.11",
		"axios": "^0.21.1",
		"chokidar": "^3.5.1",
		"configstore": "^6.0.0",
		"dotenv": "^10.0.0",
		"download": "^8.0.0",
		"execa": "^5.1.1",
		"express": "^4.17.1",
		"fast-xml-parser": "^3.19.0",
		"fs-extra": "^10.0.0",
		"immer": "^9.0.5",
		"ink": "^3.0.9",
		"ink-big-text": "^1.2.0",
		"ink-gradient": "^2.0.0",
		"ink-multi-select": "^2.0.0",
		"ink-progress-bar": "^3.0.0",
		"ink-select-input": "^4.2.0",
		"ink-spinner": "^4.0.1",
		"ink-text-input": "^4.0.1",
		"invariant": "^2.2.4",
		"lodash": "^4.17.21",
		"meow": "^8.1.2",
		"mime": "^2.5.2",
		"noodl": "file:packages/noodl",
		"noodl-aggregator": "file:packages/noodl-aggregator",
		"noodl-common": "file:packages/noodl-common",
		"noodl-types": "file:packages/noodl-types",
		"noodl-utils": "file:packages/noodl-utils",
		"pretty-error": "^3.0.4",
		"react": "^17.0.2",
		"transducers-js": "^0.4.174",
		"xstate": "^4.20.2",
		"yaml": "^2.0.0-4"
	},
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"@babel/core": "^7.14.8",
		"@babel/plugin-transform-runtime": "^7.14.2",
		"@babel/preset-env": "^7.14.8",
		"@babel/preset-typescript": "^7.14.5",
		"@jsmanifest/typefest": "^1.0.6",
		"@rollup/plugin-babel": "^5.3.0",
		"@rollup/plugin-commonjs": "^19.0.2",
		"@rollup/plugin-node-resolve": "^13.0.4",
		"@rollup/plugin-typescript": "^8.2.3",
		"@types/chai": "^4.2.21",
		"@types/chai-as-promised": "^7.1.3",
		"@types/configstore": "^5.0.1",
		"@types/download": "^8.0.1",
		"@types/express": "^4.17.13",
		"@types/fs-extra": "^9.0.12",
		"@types/ink-big-text": "^1.2.1",
		"@types/ink-gradient": "^2.0.1",
		"@types/invariant": "^2.2.34",
		"@types/lodash": "^4.14.171",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.4.4",
		"@types/prettier": "^2.3.2",
		"@types/react": "^17.0.15",
		"@types/rollup-plugin-peer-deps-external": "^2.2.1",
		"@types/rollup-plugin-progress": "^1.1.1",
		"@types/sinon": "^10.0.2",
		"@types/sinon-chai": "^3.2.5",
		"@types/transducers-js": "^0.4.4",
		"@types/ws": "^7.4.7",
		"@types/yaml": "^1.9.7",
		"@typescript-eslint/eslint-plugin": "^4.28.5",
		"@typescript-eslint/parser": "^4.28.5",
		"ava": "^3.15.0",
		"babel-plugin-lodash": "^3.3.4",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"chalk": "^4.1.1",
		"copy-webpack-plugin": "^5.1.2",
		"cross-env": "^7.0.3",
		"esbuild": "^0.12.16",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-ava": "^12.0.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"generator": "file:packages/generator",
		"globby": "^9.2.0",
		"ink-testing-library": "^2.1.0",
		"mocha": "^8.4.0",
		"nock": "^13.1.1",
		"noodl-action-chain": "file:packages/noodl-action-chain",
		"noodl-ui": "^0.1.75",
		"noodl-ui-test-utils": "^0.0.11",
		"prettier": "^2.3.2",
		"rollup": "^2.54.0",
		"rollup-plugin-filesize": "^9.1.0",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-progress": "^1.1.2",
		"sinon": "^11.1.2",
		"sinon-chai": "^3.5.0",
		"ts-mocha": "^8.0.0",
		"ts-morph": "^11.0.3",
		"ts-node": "^10.1.0",
		"ts-node-dev": "^1.1.8",
		"type-fest": "^1.2.2",
		"typescript": "^4.3.5",
		"ws": "^7.5.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pfftdammitchris/noodl-cli"
	},
	"engines": {
		"node": ">=14"
	},
	"license": "MIT",
	"prettier": {
		"arrowParens": "always",
		"endOfLine": "lf",
		"printWidth": 80,
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"project": "./tsconfig.json",
			"sourceType": "module"
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"plugins": [
			"@typescript-eslint",
			"prettier"
		],
		"env": {
			"browser": true,
			"es6": true,
			"node": true,
			"webextensions": true
		},
		"overrides": [
			{
				"files": [
					"packages/noodl-utils/src/**/*"
				],
				"excludedFiles": "*.test.ts"
			}
		],
		"rules": {
			"@typescript-eslint/ban-ts-comment": "off",
			"@typescript-eslint/explicit-module-boundary-types": "off",
			"@typescript-eslint/lines-between-class-members": [
				"error",
				"always",
				{
					"exceptAfterSingleLine": true
				}
			],
			"@typescript-eslint/member-ordering": "off",
			"@typescript-eslint/no-empty-function": "off",
			"@typescript-eslint/no-explicit-any": "off",
			"@typescript-eslint/no-namespace": "off",
			"@typescript-eslint/no-var-requires": "off",
			"eqeqeq": 0,
			"prefer-const": 0,
			"prettier/prettier": 2,
			"no-empty": "off",
			"no-inner-declarations": "off",
			"no-template-curly-in-string": "off",
			"no-useless-escape": 2
		},
		"settings": {
			"import/resolver": {
				"node": {
					"moduleDirectory": [
						"node_modules"
					]
				}
			}
		}
	},
	"ava": {
		"files": [
			"src/**/*.test.tsx"
		],
		"typescript": {
			"extensions": [
				"tsx"
			],
			"rewritePaths": {
				"src/": "dist/"
			}
		},
		"require": [
			"ts-node/register/transpile-only"
		]
	},
	"nodemonConfig": {
		"ignore": [
			".yml"
		]
	}
}
