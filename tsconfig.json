{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"esModuleInterop": true,
		"jsx": "react",
		"noEmitOnError": false,
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true
	},
	"extends": "@sindresorhus/tsconfig",
	"include": ["src"],
	"exclude": ["src/**/*.test.ts"]
}
