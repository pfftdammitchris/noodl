{
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"importHelpers": true,
		"jsx": "react",
		"keyofStringsOnly": true,
		"lib": ["es2020", "esnext"],
		"module": "es2020",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noImplicitAny": false,
		"outDir": "dist",
		"pretty": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es2020"
	},
	"exclude": ["node_modules/**/*"],
	"include": ["src/**/*"]
}
