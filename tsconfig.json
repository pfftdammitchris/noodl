{
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"jsx": "react",
		"keyofStringsOnly": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noImplicitAny": false,
		"noLib": false,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es2017"
	},
	"exclude": ["node_modules"],
	"include": [
		"./src/**/*",
		"./packages/**/*/src",
		"./dev/refs/**/*",
		"./dev/**/*.ts"
	]
}
