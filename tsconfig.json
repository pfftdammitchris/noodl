{
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"jsx": "react",
		"keyofStringsOnly": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noImplicitAny": false,
		"outDir": "dist",
		"pretty": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"importHelpers": true,
		"target": "es2015"
	},
	"exclude": ["node_modules", "packages/generator/**/*"],
	"include": ["src","packages/**/*/src/**/*"]
}
