            "type": "string"
        }
    ],
    "patternProperties": {
        "^[a-zA-Z0-9_]*$": {
            "properties": {
                "components": {
                    "$ref": "#/$defs/Component",
                    "type": "array"
                },
                "pageNumber": {
                    "description": "A page number may help distinguish between pages with similar names",
                    "type": "string"
                },
                "title": {
                    "description": "Titles can be used to represent the page",
                    "type": "string"
                },
                "viewPort": {
                    "description": "Determines the initial scroll position for the user",
                    "enum": [
                        "top",
                        "center",
                        "bottom"
                    ],
                    "type": "string"
                }
            },
