{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"suppressImplicitAnyIndexErrors": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noImplicitAny": false,
		"outDir": "dist",
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"target": "es2017"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/**/*"]
}
