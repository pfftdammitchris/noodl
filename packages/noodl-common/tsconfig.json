{
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"lib": ["esnext"],
		"keyofStringsOnly": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es2017"
	},
	"exclude": ["node_modules/**/*"],
	"include": ["src/**/*"]
}
