{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"lib": ["es6", "esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noImplicitAny": true,
		"outDir": "dist",
		"strictNullChecks": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es2019"
	},
	"exclude": ["node_modules/**/*"],
	"files": ["src/index.ts"]
}
