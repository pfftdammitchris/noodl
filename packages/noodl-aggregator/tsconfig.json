{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"jsx": "react",
		"keyofStringsOnly": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noImplicitAny": false,
		"outDir": "dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es2015"
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"],
	"files": ["src/index.ts"]
}
