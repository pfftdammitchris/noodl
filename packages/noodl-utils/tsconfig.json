{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"keyofStringsOnly": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"noImplicitAny": true,
		"outDir": "dist",
		"strictNullChecks": true,
		"skipLibCheck": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es2018"
	},
	"exclude": ["node_modules"],
	"include": ["./src"]
}
