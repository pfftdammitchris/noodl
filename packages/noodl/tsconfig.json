{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"suppressImplicitAnyIndexErrors": true,
		"lib": ["esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmitOnError": false,
		"outDir": "dist",
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"target": "esnext"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/**/*", "src/**/*.test.ts"]
}
