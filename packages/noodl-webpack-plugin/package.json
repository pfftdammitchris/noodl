{
	"name": "noodl-webpack-plugin",
	"version": "0.0.8",
	"description": "NOODL webpack plugin to provide live reload functionality when making changes",
	"browser": "dist/noodl-webpack-plugin.js",
	"main": "dist/noodl-webpack-plugin.js",
	"module": "dist/noodl-webpack-plugin.js",
	"types": "dist/noodl-webpack-plugin.d.ts",
	"scripts": {
		"presample": "rm -rf build",
		"sample": "webpack serve --port 3000 --mode=development",
		"prebuild": "rm -rf dist",
		"build": "esbuild src/noodl-webpack-plugin.ts --bundle --outdir=dist --target=node10.4 --platform=node --format=cjs",
		"start": "npm run build -- --watch",
		"server": "node server.js"
	},
	"dependencies": {
		"@jsmanifest/utils": "^1.0.7",
		"chokidar": "^2.1.8",
		"express": "^4.17.1",
		"fs-extra": "^10.0.0",
		"globby": "^6.1.0",
		"ws": "^6.2.1"
	},
	"devDependencies": {
		"esbuild": "^0.12.1",
		"html-webpack-plugin": "^5.3.1",
		"node-polyfill-webpack-plugin": "^1.1.2",
		"typescript": "^4.2.4",
		"webpack": "^5.37.1",
		"webpack-cli": "^4.7.0",
		"webpack-dev-middleware": "^3.7.3",
		"webpack-dev-server": "^3.11.2"
	},
	"keywords": [
		"noodl",
		"webpack",
		"plugin",
		"reloader",
		"refresher",
		"yml",
		"yaml"
	],
	"author": "Christopher Tran <pfftdammitchris@gmail.com>",
	"homepage": "https://github.com/pfftdammitchris/noodl-cli#readme",
	"license": "ISC",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pfftdammitchris/noodl-cli.git"
	},
	"bugs": {
		"url": "https://github.com/pfftdammitchris/noodl-cli/issues"
	}
}
